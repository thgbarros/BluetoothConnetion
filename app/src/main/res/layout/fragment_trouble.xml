<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/device_view"
        android:layout_alignParentTop="true"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/trouble_title_presents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/item_padding_3dp"
            android:paddingLeft="@dimen/item_padding_10dp"
            android:paddingTop="@dimen/item_padding_5dp"
            android:text="Presentes"
            android:textSize="@dimen/text_title_size"/>

        <View android:id="@+id/firstDividerPresents"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="@dimen/item_margin_5dp"
            android:layout_marginLeft="@dimen/item_margin_5dp"
            android:layout_below="@+id/trouble_title_presents"/>

        <ListView
            android:id="@+id/devices_list_paired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/firstDividerPresents"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical" >
        </ListView>
    </RelativeLayout>

    <View android:id="@+id/device_view"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#CFCFCF" />

    <RelativeLayout
        android:id="@+id/trouble_title_past"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_view"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/device_txt_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/item_padding_3dp"
            android:paddingLeft="@dimen/item_padding_10dp"
            android:paddingTop="@dimen/item_padding_5dp"
            android:text="Passado"
            android:textSize="@dimen/text_title_size" />

        <View android:id="@+id/firstDividerPassed"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="@dimen/item_margin_5dp"
            android:layout_marginLeft="@dimen/item_margin_5dp"
            android:layout_below="@+id/device_txt_new"/>

        <ListView
            android:id="@+id/devices_list_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/firstDividerPassed"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical" >
        </ListView>

    </RelativeLayout>

</RelativeLayout>