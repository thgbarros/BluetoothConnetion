<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MeuAppActionBar</item>

        <item name="actionBarStyle">@style/MeuAppActionBar</item>
    </style>

    <style name="MeuAppActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_action_bar</item>
        <item name="android:backgroundStacked">@color/app_action_bar</item>
        <item name="android:backgroundSplit">@color/app_action_bar</item>


        <item name="background">@color/app_action_bar</item>
        <item name="backgroundStacked">@color/app_action_bar</item>
        <item name="backgroundSplit">@color/app_action_bar</item>
        <!--<item name="titleTextStyle">@style/MeuApp.TitleTextStyle</item>-->
        <!--<item name="subtitleTextStyle">@style/MeuApp.SubTitleTextStyle</item>-->
        <!--<item name="background">@color/app_action_bar</item>-->
    </style>

    <style name="MeuApp.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFF</item>

        <item name="android:fontFamily">Reboto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MeuApp.SubTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textStyle">normal</item>
    </style>




</resources>